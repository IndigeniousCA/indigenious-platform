# MCP Configuration for Indigenous Platform
# ==========================================
# This file contains all the API keys and configuration for MCPs
# Copy this to .env.local and fill in your actual keys

# Stripe MCP - Payment Processing
STRIPE_API_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Stripe Product IDs (create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_INDIGENOUS_LARGE_MONTHLY=price_indigenous_large_monthly
NEXT_PUBLIC_STRIPE_INDIGENOUS_LARGE_ANNUAL=price_indigenous_large_annual
NEXT_PUBLIC_STRIPE_CANADIAN_STANDARD_MONTHLY=price_canadian_standard_monthly
NEXT_PUBLIC_STRIPE_CANADIAN_STANDARD_ANNUAL=price_canadian_standard_annual
NEXT_PUBLIC_STRIPE_C5_COMPLIANCE_MONTHLY=price_c5_compliance_monthly
NEXT_PUBLIC_STRIPE_C5_COMPLIANCE_ANNUAL=price_c5_compliance_annual
NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY=price_enterprise_monthly
NEXT_PUBLIC_STRIPE_ENTERPRISE_ANNUAL=price_enterprise_annual

# Resend MCP - Email Service
RESEND_API_KEY=re_YOUR_RESEND_API_KEY
RESEND_FROM_EMAIL=noreply@indigenious.ca
RESEND_REPLY_TO=support@indigenious.ca

# Sentry MCP - Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ORG=indigenous-platform
SENTRY_PROJECT=web

# Axiom MCP - Analytics (Alternative to Mixpanel)
AXIOM_API_TOKEN=YOUR_AXIOM_API_TOKEN
AXIOM_DATASET=indigenous-platform
AXIOM_ORG_ID=YOUR_AXIOM_ORG_ID

# OpenAI MCP - AI Orchestration
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPENAI_ORG_ID=org-YOUR_ORG_ID
OPENAI_MODEL=gpt-4-turbo-preview

# Supabase MCP - Database & Auth
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_JWT_SECRET

# PostgreSQL MCP - Direct Database Access
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
POSTGRES_HOST=db.YOUR_PROJECT.supabase.co
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_PASSWORD
POSTGRES_DATABASE=postgres

# n8n MCP - Workflow Automation
N8N_HOST=https://your-n8n-instance.com
N8N_API_KEY=YOUR_N8N_API_KEY
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Redis MCP - Caching (if using)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Additional Services (Direct SDK Integration)
# ============================================

# Temporal - Workflow Orchestration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=indigenous-platform
TEMPORAL_TASK_QUEUE=main-queue

# Inngest - Event-Driven Functions
INNGEST_EVENT_KEY=YOUR_INNGEST_EVENT_KEY
INNGEST_SIGNING_KEY=YOUR_INNGEST_SIGNING_KEY
INNGEST_APP_URL=https://indigenious.ca

# Trigger.dev - Background Jobs
TRIGGER_API_KEY=YOUR_TRIGGER_API_KEY
TRIGGER_API_URL=https://api.trigger.dev

# Mixpanel - Analytics (if using directly)
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN
MIXPANEL_PROJECT_ID=YOUR_PROJECT_ID

# SendGrid - Email (alternative to Resend)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@indigenious.ca

# Platform Configuration
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
ENABLE_BUSINESS_HUNTER=true
ENABLE_C5_COMPLIANCE=true
ENABLE_PR_AUTOMATION=true
ENABLE_AI_MATCHING=true

# Business Hunter Configuration
HUNTER_BATCH_SIZE=1000
HUNTER_CONCURRENT_WORKERS=10
HUNTER_RATE_LIMIT=100
HUNTER_TARGET_TOTAL=500000

# Email Campaign Settings
EMAIL_BATCH_SIZE=1000
EMAIL_DAILY_LIMIT=50000
EMAIL_RATE_LIMIT=100

# Compliance Settings
C5_MINIMUM_PERCENTAGE=5
C5_WARNING_THRESHOLD=3
C5_ALERT_ENABLED=true